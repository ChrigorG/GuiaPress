<%- include('../../partils/header')%>
<body>
    <%- include('../../partils/navbar')%>
    <div class="container">
        <hr>
        <h2>Categorias</h2>
        <a class="btn btn-outline-success" href="/admin/categories/new">Cadastrar</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Titulo</th>
                    <th>Slug</th> 
                    <th>Ações</th>  
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category => {%>
                    <tr>
                        <th><%= category.id %></th>
                        <th><%= category.title %></th>
                        <th><%= category.slug %></th>
                        <th>
                            <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmarExclusao(event, this)">
                                <input type="hidden" name="id" value="<%= category.id %>">
                                <button class="btn btn-danger">Deletar</button>
                            </form>
                            <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning">Editar</a>
                        </th>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
<%- include('../../partils/footer')%> 
<script>
    function confirmarExclusao(event, form){
        event.preventDefault();
        const decision = confirm("Deseja realmente excluir?");
        if(decision){
            form.submit();
        }
    }
</script>